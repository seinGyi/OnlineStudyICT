<!DOCTYPE html>
<html>
  <% include ../partials/header.ejs %>
  <body>
    <div class="d-flex" id="wrapper">

      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% include ../partials/nav.ejs %>
        <div class="container-fluid"><br><br>
          <div class="col-md-4 m-auto">
            <h1>Add Lesson</h1>
            <br><br>
            <form action="/courses/<%=course._id%>/addlessons" method="post" enctype="multipart/form-data">
              <div class="form-group">
                <!-- <label for="exampleFormControlInput1">Number</label> -->
                <input type="number" class="form-control" id="exampleFormControlInput1" name="number" placeholder="Lesson Number">
              </div>
              <div class="form-group">
                <!-- <label for="exampleFormControlInput1">Title</label> -->
                <input type="text" class="form-control" id="exampleFormControlInput1" name="title" placeholder="Lesson Title">
              </div>
              <div class="form-group">
                <label for="exampleFormControlTextarea1">Choose Lesson</label>
                <input type="file" name="file" id="file">
              </div>
              <input type="submit" class="btn btn-primary btn-block" value="Upload">
            </form>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/footer.ejs %>
  </body>
  <% include ../partials/scripts.ejs %>
</html>

<!DOCTYPE html>
<html>
  <% include ../partials/learners/header.ejs %>
  <body>
    <div class="d-flex" id="wrapper">
      <% if(user){ %>
        <% include ../partials/learners/sidebar.ejs %>
      <% } %>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% include ../partials/learners/nav.ejs %>
        <div class="container-fluid">
          <br><br>
          <div class="col-md-5 m-auto">
            <div class="card card-body">
              <h1 class="text-center md-5">
                <i class="fas fa-user-plus"></i>
                Welcome
              </h1>
              <form action="/learners/register" method="post">
                <div class="form-group">
                  <label for="exampleFormControlInput1">Name</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" name="name">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Email</label>
                  <input type="email" class="form-control" id="exampleFormControlInput1" name="email">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Username</label>
                  <input type="text" class="form-control" id="exampleFormControlInput1" name="username">
                </div>
                <div class="form-group">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Password</label>
                  <input type="password" class="form-control" id="exampleFormControlInput1" name="password">
                </div>
                <div class="form-group">
                  <label for="exampleFormControlInput1">Confirm Password</label>
                  <input type="password" class="form-control" id="exampleFormControlInput1" name="password2">
                </div>
                <button class="btn btn-lg btn-primary btn-block" type="submit">Register</button>
                <div class="form-group">
                  <a href="/learners/login">Already register!</a>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
    <% include ../partials/learners/footer.ejs %>
  </body>
  <% include ../partials/learners/scripts.ejs %>
</html>

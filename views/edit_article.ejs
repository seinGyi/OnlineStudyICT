<!DOCTYPE html>
<html>
  <% include partials/header.ejs %>
  <body>
    <div class="d-flex" id="wrapper">
      <% include partials/sidebar.ejs %>
      <!-- Page Content -->
      <div id="page-content-wrapper">
        <% include partials/nav.ejs %>
        <div class="container-fluid">

          <h1><%= title %></h1>

          <form action="/articles/edit/<%=article._id%>" method="post">
            <div class="form-group">
              <label for="exampleFormControlInput1">Title</label>
              <input type="text" class="form-control" id="exampleFormControlInput1" name="title" value="<%=article.title%>">
            </div>
            <div class="form-group">
              <label for="exampleFormControlInput1">Category</label>
              <select type="text" class="form-control" name="category">
                <option value="network">Network</option>
                <option value="programming">Programming</option>
                <option value="combasic">Computer Basic</option>
              </select>
            </div>
            <div class="form-group">
                <!-- <label for="exampleFormControlInput1">Author</label> -->
                <input type="text" class="form-control" id="exampleFormControlInput1" name="author" value="<%=article.author%>" hidden>
                <input type="text" class="form-control" id="exampleFormControlInput1" name="author" value="<%=article.authname%>" hidden>
            </div>
            <div class="form-group">
              <label for="exampleFormControlTextarea1">Body</label>
              <textarea type="text" class="form-control" id="exampleFormControlTextarea1" rows="8" name="body">
                <%=article.body%>
              </textarea>
            </div>
            <button type="submit">Submit</button>
          </form>

        </div>
      </div>
    </div>
    <% include partials/footer.ejs %>
  </body>
  <% include partials/scripts.ejs %>
</html>
